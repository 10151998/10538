<h1>Listing sports</h1>

<table>
  <tr>
    <th>id</th>
    <th>name</th>
  </tr>

<% @sports.each do |sport| %>
  <tr>
    <th><%= sport.id %></th>
    <th><%= sport.name %></th>
    <td><%= link_to 'Show', sport %></td>
    <td><%= link_to 'Edit', edit_sport_path(sport) %></td>
    <td><%= button_to 'Destroy', sport, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

