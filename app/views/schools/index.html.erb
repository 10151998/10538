<h1>Listing schools</h1>

<table>
  <tr>
    <th>id</th>
    <th>name</th>
    <th>address</th>
    <th>city</th>
    <th>state</th>
    <th>zipcode</th>
    <th>telephone</th>
    <th>created_at</th>
    <th>updated_at</th>
  </tr>

<% @schools.each do |school| %>
  <tr>
    <td><%= school.id %></td>
    <td><%= school.name %></td>
    <td><%= school.address %></td>
    <td><%= school.city %></td>
    <td><%= school.state %></td>
    <td><%= school.zipcode %></td>
    <td><%= school.telephone %></td>
    <td><%= school.created_at %></td>
    <td><%= school.updated_at %></td>
    <td><%= link_to 'Show', school %></td>
    <td><%= link_to 'Edit', edit_school_path(school) %></td>
    <td><%= button_to 'Destroy', school, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

