<%- model_class = ChallengeMessage -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:sender_team_id) %></th>
      <th><%= model_class.human_attribute_name(:receiver_team_id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:datetime) %></th>
      <th><%= model_class.human_attribute_name(:location) %></th>
      <th><%= model_class.human_attribute_name(:is_read) %></th>
      <th><%= model_class.human_attribute_name(:message_type) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @challenge_messages.each do |challenge_message| %>
      <tr>
        <td><%= link_to challenge_message.id, challenge_message_path(challenge_message) %></td>
        <td><%= challenge_message.sender_team_id %></td>
        <td><%= challenge_message.receiver_team_id %></td>
        <td><%= challenge_message.user_id %></td>
        <td><%= challenge_message.datetime %></td>
        <td><%= challenge_message.location %></td>
        <td><%= challenge_message.is_read %></td>
        <td><%= challenge_message.message_type %></td>
        <td><%=l challenge_message.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_challenge_message_path(challenge_message), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      challenge_message_path(challenge_message),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_challenge_message_path,
            :class => 'btn btn-primary' %>
