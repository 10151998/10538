<%= form_for @challenge_message, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :sender_team_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :sender_team_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :receiver_team_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :receiver_team_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :user_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :datetime, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :datetime, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :location, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :location, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :is_read, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :is_read, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :message_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :message_type, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                challenge_messages_path, :class => 'btn' %>
  </div>
<% end %>
