<h1>Listing games</h1>

<table>
  <tr>
    <th>id</th>
    <th>name</th>
  </tr>

  <% @games.each do |game| %>
  <tr>
    <th><%= game.name %></th>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= button_to 'Destroy', game, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
  <% end %>
</table>

<br />

<%= link_to 'New Game', new_game_path %>
