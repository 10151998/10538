<div class="tag_form">
  <%= form_tag do %>
    <fieldset>
      <legend>Please Log In</legend>

    <div>
      <label for="username">Username:</label>
      <%= text_field_tag :username, params[:username] %>
    </div>
    
    <div>
      <label for="password">Password:</label>
      <%= password_field_tag :password, params[:password] %>
      <%  if flash.keep(:notice_unvalid_password) %>
        <%= flash[:notice_unvalid_password] %></br>
      <% end %>
    </div>

    <div>
      <%= submit_tag "Login" %>
      <%= link_to "forget password", '/users/render_forget_password' %>
    </div>
  </fieldset>
<% end %>

