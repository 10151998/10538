<h1>Listing team_challenges</h1>

<table>
  <tr>
    <th>Sender team</th>
    <th>Receiver team</th>
    <th>Datetime</th>
    <th>Location</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @team_challenges.each do |team_challenge| %>
  <tr>
    <td><%= team_challenge.sender_team_id %></td>
    <td><%= team_challenge.receiver_team_id %></td>
    <td><%= team_challenge.datetime %></td>
    <td><%= team_challenge.location %></td>
    <td><%= link_to 'Show', team_challenge %></td>
    <td><%= link_to 'Edit', edit_team_challenge_path(team_challenge) %></td>
    <td><%= link_to 'Destroy', team_challenge, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

